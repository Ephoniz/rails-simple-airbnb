<p id="notice"><%= notice %></p>

<h1>Flats</h1>

<ul class="flats">
    <% @flats.each do |flat| %>
      <li>
        <h3 class="flat-title"><%= flat.name %></h3>
        <p class="flat-address"><%= flat.address %></p>
        <div class="flat-data">
        <span><i class="fa fa-users"></i> <%= flat.price_per_night %></span>
        <span><i class="fa fa-bitcoin"></i> <%= flat.number_of_guests %></span>
        </div>
        <div class="flat-options">
        <%= link_to 'More info', flat , class: "more-info-style"%>
        <%= link_to 'Edit', edit_flat_path(flat) , class: "edit-style"%>
        <%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' }%>
        </div>
      </li>
    <% end %>
</ul>

<br>

<%= link_to 'New Flat', new_flat_path %>
